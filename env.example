# SpygateAI Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# SPYGATE AI CONFIGURATION
# ===========================================

# Environment
SPYGATE_ENV=production
SPYGATE_DEBUG=false
SPYGATE_LOG_LEVEL=INFO

# ===========================================
# GPU CONFIGURATION
# ===========================================

# GPU settings
SPYGATE_GPU_MEMORY_FRACTION=0.85
SPYGATE_GPU_MIXED_PRECISION=true
SPYGATE_CUDA_DEVICE=0

# ===========================================
# OCR CONFIGURATION
# ===========================================

# Tesseract OCR path (Windows)
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_CONFIG=--oem 3 --psm 6
TESSERACT_LANGUAGE=eng

# ===========================================
# PERFORMANCE MONITORING
# ===========================================

# Performance settings
PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=30
PERFORMANCE_ALERT_LOW_FPS=15.0

# ===========================================
# SECURITY SETTINGS
# ===========================================

# File upload restrictions
MAX_FILE_SIZE=500MB
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,wmv

# ===========================================
# API KEYS (if using external services)
# ===========================================

# Note: Keep these secret! Add to .env but NOT to version control
# OPENAI_API_KEY=your_openai_key_here
# GOOGLE_CLOUD_API_KEY=your_google_key_here 